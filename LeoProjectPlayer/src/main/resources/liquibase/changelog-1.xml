<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Robin RytkÃ¶nen">
        <comment>Add player table</comment>
        <createTable tableName="PlayerInfo">
            <column name="playerId" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="playerId"/>
            </column>
            <column name="Name" type="VARCHAR(255)"/>
            <column name="Last name" type="VARCHAR(255)"/>
            <column name="Email" type="VARCHAR(255)"/>
            <column name="Phone number" type="VARCHAR(255)"/>
            <column name="Location" type="VARCHAR(255)"/>
            <column name="Country" type="VARCHAR(255)"/>
            <column name="GamingBalance" type="BIGINT"/>
        </createTable>
    </changeSet>
</databaseChangeLog>